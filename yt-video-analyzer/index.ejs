<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>YouTube Sentiment Analyzer</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #1e3c72, #2a5298);
      color: #fff;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    h1 {
      margin-top: 40px;
      font-size: 36px;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }
    form {
      margin: 30px 0;
      display: flex;
      justify-content: center;
      width: 100%;
      gap: 10px;
    }
    input[type="text"] {
      width: 50%;
      padding: 14px;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      outline: none;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
    button {
      padding: 14px 28px;
      font-size: 16px;
      border: none;
      border-radius: 12px;
      background: linear-gradient(to right, #0072ff, #00c6ff);
      color: white;
      cursor: pointer;
      transition: background 0.3s ease;
      font-weight: bold;
    }
    button:hover {
      background: linear-gradient(to right, #00c6ff, #0072ff);
    }
    .results {
      text-align: center;
      margin-top: 20px;
      background: rgba(255, 255, 255, 0.1);
      padding: 20px;
      border-radius: 16px;
      backdrop-filter: blur(10px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.3);
      width: 80%;
      max-width: 700px;
    }
    .results p { font-size: 18px; margin: 10px 0; }
    #searchInput {
      margin-top: 30px;
      padding: 12px;
      width: 60%;
      max-width: 600px;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      outline: none;
    }
    #filterButtons {
      margin-top: 25px;
      display: flex;
      justify-content: center;
      gap: 15px;
      flex-wrap: wrap;
    }
    .filter-btn {
      padding: 10px 18px;
      border: none;
      border-radius: 20px;
      background: #ffffff20;
      color: white;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.3s ease;
      backdrop-filter: blur(5px);
    }
    .filter-btn.active,
    .filter-btn:hover {
      background: #00c6ff;
      color: #fff;
    }
    .comment-box {
      margin: 20px auto;
      background: rgba(255, 255, 255, 0.15);
      border-radius: 14px;
      padding: 16px 20px;
      width: 80%;
      max-width: 750px;
      color: #fff;
      font-size: 15px;
      line-height: 1.5;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
      backdrop-filter: blur(10px);
      transition: transform 0.2s ease;
    }
    .comment-box:hover { transform: translateY(-4px); }
    .comment-box strong { margin-right: 8px; }
    .positive { border-left: 6px solid #4caf50; }
    .negative { border-left: 6px solid #f44336; }
    .neutral { border-left: 6px solid #ff9800; }
    @media (max-width: 768px) {
      input[type="text"], #searchInput { width: 85%; }
      button { width: auto; padding: 12px 16px; }
      .comment-box { width: 90%; }
    }
  </style>
</head>
<body>
  <h1>üìä YouTube Sentiment Analyzer</h1>
  <form method="POST" action="/">
    <input type="text" name="videoUrl" placeholder="Paste YouTube video URL..." required>
    <button type="submit">Analyze</button>
  </form>

  <% if (summary) { %>
    <div class="results">
      <h3>üìù Video Summary</h3>
      <p><%= summary %></p>
    </div>
  <% } %>

  <% if (sentimentData) { %>
    <div class="results">
      <h3>Analysis Summary</h3>
      <p>‚úÖ Analyzed: <strong><%= sentimentData.total %></strong> comments</p>
      <p>üëç Positive: <%= sentimentData.positive %>%</p>
      <p>üòê Neutral : <%= sentimentData.neutral %>%</p>
      <p>üëé Negative: <%= sentimentData.negative %>%</p>
    </div>
  <% } %>

  <% if (comments && comments.length > 0) { %>
    <input type="text" id="searchInput" placeholder="üîç Search through comments...">
    <div id="filterButtons">
      <button class="filter-btn active" data-filter="all">All</button>
      <button class="filter-btn" data-filter="positive">Positive</button>
      <button class="filter-btn" data-filter="neutral">Neutral</button>
      <button class="filter-btn" data-filter="negative">Negative</button>
    </div>
    <div id="commentsContainer">
      <% comments.forEach(c => { 
           const sentiment = c.sentiment?.toLowerCase() || 'neutral';
      %>
        <div class="comment-box <%= sentiment %>">
          <strong>[<%= c.sentiment %>]</strong> <%= c.comment %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <script>
    const searchInput = document.getElementById("searchInput");
    const commentBoxes = document.querySelectorAll(".comment-box");
    const filterButtons = document.querySelectorAll(".filter-btn");
    searchInput?.addEventListener("input", function () {
      const query = this.value.toLowerCase();
      commentBoxes.forEach(box => {
        const text = box.textContent.toLowerCase();
        box.style.display = text.includes(query) ? "block" : "none";
      });
    });
    filterButtons.forEach(btn => {
      btn.addEventListener("click", () => {
        filterButtons.forEach(b => b.classList.remove("active"));
        btn.classList.add("active");
        const filter = btn.getAttribute("data-filter");
        commentBoxes.forEach(box => {
          box.style.display = (filter === "all" || box.classList.contains(filter)) ? "block" : "none";
        });
      });
    });
  </script>
</body>
</html>
